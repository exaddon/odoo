<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="biz_crm_lead_form_view" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='lead_info']" position="after">
                <group>
                    <field name="join_exaddon_lead"/>
                </group>
            </xpath>    
        </field>
    </record>

    <record id="biz_crm_opportunity_tree_view" model="ir.ui.view">
        <field name="name">crm.lead.tree.opportunity</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor" />
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="after">
                <field name="join_exaddon_lead" optional="hide"/>
            </xpath>    
        </field>
    </record>

    <record id="biz_crm_lead_tree_view" model="ir.ui.view">
        <field name="name">crm.lead.tree.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_leads" />
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="after">
                <field name="join_exaddon_lead" optional="hide"/>
            </xpath>    
        </field>
    </record>
</odoo>