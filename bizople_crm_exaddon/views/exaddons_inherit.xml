<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="biz_exaddons_snippets" inherit_id="website.snippets">
		<xpath expr="//div[@id='snippet_mega_menu']" position="after">
			<div id="snippet_menu" class="o_panel">
				<div class="o_panel_header">
					<i class="fa fa-puzzle-piece" />
					Form Snippets
				</div>
				<div class="o_panel_body">
					<t t-snippet="bizople_crm_exaddon.s_exaddons_form" t-thumbnail="/bizople_crm_exaddon/static/description/icon.png"/>
                    <t t-snippet="bizople_crm_exaddon.s_exaddons_form_download" t-thumbnail="/bizople_crm_exaddon/static/description/icon.png"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>