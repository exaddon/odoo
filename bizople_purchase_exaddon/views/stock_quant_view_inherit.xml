<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="biz_stock_quant_tree_view_inherit" model="ir.ui.view">
        <field name="name">stock.quant.tree.view.inherit</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='inventory_quantity']" position="before">
                <field name="is_consumable_item" class="text-center"/>
            </xpath>    
        </field>
    </record>

    <record id="biz_quant_search_view_inherit" model="ir.ui.view">
        <field name="name">stock.quant.search.view.inherit</field>
        <field name="inherit_id" ref="stock.quant_search_view"/>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <xpath expr="//search/group/filter[@name='reserved']" position="after">
                <filter name='is_consumable_item' string="Consumable Item is True" domain="[('is_consumable_item','=', True)]"/>
                <filter name='is_consumable_item' string="Consumable Item is False" domain="[('is_consumable_item','=', False)]"/>
            </xpath>    
        </field>
    </record>
</odoo>